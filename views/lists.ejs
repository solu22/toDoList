    
    <%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= itemTitle %></h1>
    </div>
    
    <div class="box">
        <% 
           newItems.forEach(item=>{%>
            <form action="/delete" method="POST">

                <div class="item">
                    <input type="checkbox" name="deleteItem" value="<%=item._id%>" onChange="this.form.submit()">
                    <p><%= item.name %></p> 
                </div>
                <input type="hidden" name="lists" value="<%= itemTitle %>">
            </form>

           
            

           <%});%>

        <form class="item" action="/" method="POST">
            <input type="text" name="addItem" placeholder="Add the list here" autocomplete="off">
            <button type="submit" name="lists" value="<%= itemTitle %>">+</button>
        </form>
    </div>
    
    <%- include("footer") -%>
    
    